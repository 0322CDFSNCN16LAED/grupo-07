<!DOCTYPE html>

<html lang="en">
<head>
<%- include ('./partials/head') %> 
</head>

<body class="bg-light-gray w-100">

<%- include ('./partials/header') %> 

<main class="w-100 p-8 m-center">

    <div class="banner-envio">
        <marquee>
            <span>&nbsp;&nbsp;&nbsp;ENVIO GRATIS A TODO EL PAÍS&nbsp;&nbsp;&nbsp;</span>
            <span>&nbsp;&nbsp;¡3 y 6 CUOTAS SIN INTERÉS!&nbsp;&nbsp;&nbsp;</span>
            <span>&nbsp;&nbsp;&nbsp;ENVIO GRATIS A TODO EL PAÍS&nbsp;&nbsp;&nbsp;</span>
            <span>&nbsp;&nbsp;¡ESTAMOS ENTREGANDO!&nbsp; &nbsp;</span>
        </marquee>
    </div>

    <div class="w-100 p-8 m-center">
        <ul class="nav-section w-50  mb-8 flex">
            <li class="mx-10"><a href="/">Inicio</a></li>
            <li class="mx-10">/</li>
            <li class="mx-10"><a href="/nosotros">Accesorios</a></li>
        </ul>
    </div>

    <section class="flex fx-wrap mt-16 fx-align-center">
        
        <h2 class="font-heading mb-8 w-100 text-center">Accesorios</h2>
        <% accesorios.forEach(accesorio => {%> 
            <div class="w-50 w-desktop-25 p-8">
                <article class="product" id="1">
                    <div>
                        <a href="/accesorios/<%= accesorio.id %> ">
                            <img class="w-100" src="<%= accesorio.img %>" alt="Imagen de la tabla"/>
                        </a>
                    </div>
                    <div class="p-relative h-27 flex fx-wrap fx-align-center">
                        <h3 class="font-medium w-100 text-center"><%= accesorio.type %> </h3>
                        <p class="product-title font-large w-50 text-center">$ <%= accesorio.price %> </p>
                        <p class="product-title font-medium w-50 text-center"><%= accesorio.discount %> % OFF</p>
                    </div>
                   
                </article>
            </div>
            <% }) %>

    </section>
          
    <section class="w-100">
        <h2 class="font-heading mb-8 w-100">Nuestras Escuelas</h2>
        <div class="flex fx-wrap fx-align-center mt-16">
            <article class="w-50 w-desktop-25 p-8" >
                <a href="https://www.youtube.com/watch?v=KhZoTBuxHKY"><img class="w-100" src="/videos/video1.jpg" alt="billabong"></a>
            </article>
            <article class="w-50 w-desktop-25 p-8" >
                <a class="w-100 px-10" href="https://www.youtube.com/watch?v=x8dg7XKu_CI"><img class="w-100" src="/videos/video2.jpg" alt="hawai"></a>
            </article>
            <article class="w-50 w-desktop-25 p-8" >
                <a href="https://www.youtube.com/watch?v=1_azHA9quYg"><img class="w-100" src="/videos/video3.jpg" alt="billabong"></a>
            </article>
            <article class="w-50 w-desktop-25 p-8" >
                <a href="https://www.youtube.com/watch?v=tLB0We5SU2M"><img class="w-100" src="/videos/video4.jpg" alt="billabong"></a>
            </article>
        </div>        
    </section>
       
</main>

<%- include ('./partials/footer') %> 
    
</body>


</html>