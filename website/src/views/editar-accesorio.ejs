<!DOCTYPE html>

<html lang="en">
<head>
<%- include ('./partials/head') %> 
<link rel = "stylesheet" href = "/css/forms.css"/>
</head>

<body class="bg-light-gray w-100">

    <%- include ('./partials/header') %> 
    
    <main class="form-main">
        
        <section class="section-form">
            
            <div class="bg-light-blue br-10">
                <div class="w-100 fx-align-center p-8">

                    <% if(locals.errors){ errors.forEach(error => {%>
                      <p class="font-navy"><%= error.msg %></p>
                      <% }) } %>
                  </div>

                <form class="form"  action="/accesorios/<%= accesorio.id %>/edit?_method=PUT" method="POST" enctype="multipart/form-data">

                    <h2 class="w-100">Editar "<%= accesorio.type %>"</h2>
                    
                    <div class="w-100 fx-align-center p-8">
                        <input class="form-inp" type="text" name="type" id="" placeholder="Nombre del producto" value="<%= accesorio.type %>"require>
                    </div>

                   <div class="w-100 fx-align-center p-8">
                       <input class="form-inp" type="text-box" name="description" id="" placeholder="DescripciÃ³n" value="<%= accesorio.description %>" require>
                   </div>
                   
                   <div class="flex fx-wrap w-100 fx-align-center p-8 ">
                    <label for="brand_id" class="w-100">Marca: </label>
                    <div class="w-100 p-8">
                        <select name="brand_id" id="">
                            <% brands.forEach(brand => { %>
                                <option value="<%= brand.id%>"><%= brand.name %> </option>
                            <% }) %> 
                        </select>
                    </div>
                </div>


                   <div class="w-100 fx-align-center p-8">
                        <input class="form-inp" type="number" name="price" id="" placeholder="Precio"  value="<%= accesorio.price %>" require>
                   </div>

                   <div class="w-100 fx-align-center p-8">
                        <input class="form-inp" type="number" name="discount" id="" placeholder="Descuento"  value="<%= accesorio.discount %>" require>
                   </div>
                   
                   <div class="flex fx-wrap w-100 fx-align-center p-8">
                    <label for="url" class="w-100">Imagen del producto: </label>
                         <div class="w-100 p-8">
                             <input type="file" name="url" id="" multiple/>
                         </div>
                    </div>

                    <div class="w-100 fx-align-center p-8">
                        <button class="form-button" type="submit">Guardar</button>
                    </div>

                    <div class="w-100 fx-align-center p-8">
                        <button class="form-button" type="reset" >Resetear</button>                    
                    </div>
                
                </form>
                
            </div>

                        
        </section>

    </main>


    <%- include ('./partials/footer') %> 
    
</body>


</html>