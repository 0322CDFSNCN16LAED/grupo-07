<!DOCTYPE html>
<html lang="en">
<head>
<%- include ('./partials/head') %> 
    <link rel = "stylesheet" href = "/css/register.css"/>
    <link rel = "stylesheet" href = "/css/contacto.css"/>
</head>
<body>

<%- include ('./partials/header') %> 

    <main class="reg-main">
        <div class="">
 

            <div class="form-box">
                <form class="register-form" action="/" method="POST">
                    <h2 class="reg-form-title">Contactanos</h2>
                    <div class="reg-form-image">
                        <img>
                    </div>
                    <section class="first-section">
                    <div class="reg-form-box">
                        <input class="reg-inp" type="text" name="first_name" id="first_name" required placeholder="Nombre">
                    </div>
                    <div class="reg-form-box">
                        <input class="reg-inp" type="text" name="last_name" id="last_name" required placeholder="Apellido">
                    </div>
                    </section>
                    <section class="second-section ">
                    <div class="reg-form-box">
                        <input class="reg-inp" type="mail" name="email" id="email" required placeholder="Correo ElectrÃ³nico">
                    </div>
                    <div class="reg-form-box">
                        <input class="reg-inp" type="tel" name="tel" id="tel" placeholder="Telefono">
                    </div>
                    <input type="hidden" value= <%= date = new Date().toLocaleDateString() %> name="date">
                    </section>
                    <div class="reg-inp reg-form-date-select asunto " >
                        <input class="reg-inp" type="asunto" name="issue" id="issue" placeholder="Asunto">
                    </div>
                    <div class="reg-inp reg-form-date-select comments">
                        <textarea class="reg-inp reg-form-date-select" name="comments" id="comments"required rows="10" cols="50" placeholder="Escribe aqui tu comentario"></textarea> 
                                     
                    </div>
                    
                    <div class="reg-form-box">
                        <button class="reg-form-button" type="submit">Enviar</button>
                    </div>
                    <div class="reg-form-box">
                        <button class="reg-form-button" type="reset" value="Resetear" name="resetear">Resetear</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="register-login-bar">




        </div>
    </main>

<section class="comments_container">
    <h2> Sus comentarios</h2>
    <% comments.forEach(comments => { %> 
  <div class="comments_box">

    <p>Usuario: <%= comments.first_name %> </p>
    <p>Asunto: <%= comments.issue %> </p>
    <p>Fecha: <%= comments.date %> </p>
    <p>Comentario: <%= comments.comments %> </p>

  </div>
  <% }) %> 

</section>

<%- include ('./partials/footer') %> 
</body>
</html>